# LLM
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_CHAT_MODEL=llama3.2:3b
OPENAI_BASE_URL=https://api.openai.com
OPENAI_MODEL=gpt-4o-mini
OPENAI_API_KEY=
GEMINI_BASE_URL=https://generativelanguage.googleapis.com
GEMINI_MODEL=gemini-2.5-flash
GEMINI_API_KEY=
UPLOAD_DIR=/data/uploads

# Gateway
INFERENCE_BASE_URL=http://inference:8000
INFERENCE_TIMEOUT_SECONDS=120
SERVER_READ_TIMEOUT_SECONDS=300
SERVER_WRITE_TIMEOUT_SECONDS=600
SERVER_IDLE_TIMEOUT_SECONDS=120
JWT_SECRET=
RATE_LIMIT_RPS=5
PORT=8080

# Postgres
POSTGRES_USER=knowledgeops
POSTGRES_PASSWORD=knowledgeops
POSTGRES_DB=knowledgeops
POSTGRES_PORT=5432

# Qdrant
QDRANT_PORT=6333
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=knowledgeops_chunks
EMBEDDING_MODEL=nomic-embed-text:latest
CHUNK_SIZE=200
CHUNK_OVERLAP=40

# Frontend
VITE_GATEWAY_URL=http://localhost:8080
